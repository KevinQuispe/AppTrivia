<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin">

    <GridLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_preguntar"
            android:layout_width="275dp"
            android:layout_column="0"
            android:layout_marginTop="@dimen/form_pregunta_margin"
            android:hint="Ingrese Pregunta?">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_pregunta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textSize="@dimen/form_txt_size" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_layout_respuesta1"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="@dimen/form_pregunta_margin"
            android:hint="Ingrese Respuesta 1">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_respuesta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="@dimen/form_txt_size" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/check_respuesta1"
            android:layout_marginTop="45dp"
            android:checked="false"
            android:text="" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_layout_respuesta2"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="@dimen/form_pregunta_margin"
            android:hint="Ingrese Respuesta 2">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_respuesta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="@dimen/form_txt_size" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/check_respuesta2"
            android:layout_marginTop="45dp"
            android:checked="false"
            android:text="" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_layout_respuesta3"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="@dimen/form_pregunta_margin"
            android:hint="Ingrese Respuesta 3">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_respuesta3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="@dimen/form_txt_size" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/check_respuesta3"
            android:layout_marginTop="45dp"
            android:checked="false"
            android:text="" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_layout_respuesta4"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="@dimen/form_pregunta_margin"
            android:hint="Ingrese Respuesta 4">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_respuesta4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="@dimen/form_txt_size" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/check_respuesta4"
            android:layout_marginTop="45dp"
            android:checked="false"
            android:text="" />

        <Button
            android:id="@+id/btn_registrar"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:padding="16dp"
            android:text="@string/form_pregunta_fragment"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp" />
    </GridLayout>
</ScrollView>