<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/form_pregunta_margin"
   android:background="@drawable/fondo"
    tools:context="com.example.pcquispe.apptrivia.PlayTriviaActivity">
    <Button
        android:id="@+id/btn_empezar"
        android:textColor="@color/buttonTextColorWhite"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:focusable="true"
        android:text="Empezar"
        android:theme="@style/RaisedButtonDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp" />

    <Button
        android:id="@+id/btn_salir"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:focusable="true"
        android:text="Salir"
        android:textColor="@color/color_text_salir"
        android:theme="@style/RaisedButtonDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />
</RelativeLayout>

