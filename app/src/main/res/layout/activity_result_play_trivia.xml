<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:weightSum="1"
    android:background="@drawable/bg"
    tools:context="com.example.pcquispe.apptrivia.ResultPlayTriviaActivity">
    <TextView
        android:textColor="@color/buttonPressedColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Resultado Quiz Trivia"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/txtpreguntaplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NÂ° Preguntas:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/buttonTextColorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_respuestaplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/txtaciertos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aciertos:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/buttonTextColorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_aciertos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/buttonTextColorBlack"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textfallos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fallos:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/buttonTextColorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_fallos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/txt_color_fallos"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textpuntos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puntos:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/buttonTextColorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_puntos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/texttiempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Timpo:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/buttonTextColorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_tiempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

        </TableRow>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/txt_puntoss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/txt_nombre_enviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ingrese su nombre"
                android:textSize="20dp"
                android:inputType="textPersonName" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_result_playquiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_resultado_triviaTop"
            android:background="@color/buttonPressedColor"
            android:focusable="true"
            android:text="Enviar" />
    </TableLayout>

</LinearLayout>
